<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".FeedbackFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/comfortaa_bold"
            android:text="Become a teacher!"
            android:textColor="@color/blue"
            android:textSize="25dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Name"
        android:padding="4dp"
        android:paddingStart="30dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_no_underline"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            android:paddingStart="30dp" />

    <EditText
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Photo URL"
        android:inputType="textUri"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Reason"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reason"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Level"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Rate"
        android:inputType="number"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Price"
        android:inputType="number"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Description"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/insta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Instagram"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insta"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Telephone"
        android:padding="4dp"
        android:paddingStart="30dp" />

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tel"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Number"
        android:padding="4dp"
        android:paddingStart="30dp" />
    <EditText
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/num"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_no_underline"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Category"
        android:padding="4dp"
        android:paddingStart="30dp" />
    <!-- Add more EditText fields as needed -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="send"
        android:padding="10dp"
        android:background="@drawable/register_bottom_back"
        />
</RelativeLayout>
